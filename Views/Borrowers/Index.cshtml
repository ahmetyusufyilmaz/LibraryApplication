@model List<LibraryApplication.Models.Borrower>


<h3>Kişi Listesi</h3>

<p>
    <a class="btn btn-success" asp-action="Create">Yeni Kişi Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
           
            <th>Ad</th>
            <th>Soyad</th>
            <th>Telefon No</th>
            <th>ID</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                


               
            </tr>
        }
    </tbody>
</table>